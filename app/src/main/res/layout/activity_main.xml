<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/relation_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/relation"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/gone_tv"
        app:layout_constraintTop_toBottomOf="@id/relation_tv"
        android:layout_marginTop="30dp"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:text="GoneMargin定位"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>


    <TextView
        android:id="@+id/bias_tv"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Bias定位"
        app:layout_constraintTop_toBottomOf="@id/gone_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/circle_tv"
        app:layout_constraintTop_toBottomOf="@id/bias_tv"
        android:text="Circle定位"
        android:gravity="center"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/pro_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/circle_tv"
        android:text="约束定位"
        android:gravity="center"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_width="0dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/util_tv"
        android:text="工具约束"
        android:gravity="center"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/pro_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/barrier_tv"
        android:gravity="center"
        android:text="Barrier约束"
        app:layout_constraintTop_toBottomOf="@id/util_tv"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:text="Group约束"
        app:layout_constraintTop_toBottomOf="@id/barrier_tv"
        android:gravity="center"
        android:id="@+id/group_tv"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>