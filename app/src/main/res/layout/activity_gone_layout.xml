<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoneLayoutActivity">

    <TextView
        android:id="@+id/xs_tv"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XueSong"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zp_tv"
        style="@style/MyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZhangPeng"
        app:layout_constraintLeft_toRightOf="@id/xs_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ws_tv"
        style="@style/MyTextView"
        android:text="WangShuai"
        app:layout_goneMarginLeft="20dp"
        app:layout_goneMarginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/zp_tv"
        app:layout_constraintLeft_toRightOf="@id/zp_tv"
        app:layout_constraintBottom_toTopOf="@id/qc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/qc_tv"
        android:text="QuanChao"
        app:layout_constraintTop_toBottomOf="@id/xs_tv"
        style="@style/MyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="YiKang"
        style="@style/MyTextView"
        android:id="@+id/yk_tv"
        app:layout_constraintTop_toBottomOf="@id/qc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>